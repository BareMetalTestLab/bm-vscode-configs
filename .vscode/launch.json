{
    "version": "0.2.0",
    "inputs": [
        {
            "type": "promptString",
            "id": "IPAddressID",
            "description": "IP of the J-Link GDB Server",
            "default": "192.168.1.100"
        },
        {
            "type": "promptString",
            "id": "BLACKMAGIC",
            "description": "GDB Target for BlackMagic Probe <ip:port> or <serial>",
            "default": "COM1"
        }
    ],
    "configurations": [
        {
            "name": "Launch (Remote SEGGER JLink)",
            "request": "launch",
            "type": "cortex-debug",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceFolder}/${config:bm.firmwareFileName}",
            "svdFile": "${workspaceFolder}/${config:bm.svdFileName}",
            "servertype": "jlink",
            "ipAddress": "${input:IPAddressID}",
            "interface": "swd",
            "device": "${config:bm.deviceName}",
            "gdbPath": "arm-none-eabi-gdb",
            "runToMain": true,
            "runToEntryPoint": "main",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "rtos": "FreeRTOS",
            "showDevDebugOutput": "none"
        },
        {
            "name": "Attach (Remote SEGGER JLink)",
            "request": "attach",
            "type": "cortex-debug",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceFolder}/${config:bm.firmwareFileName}",
            "svdFile": "${workspaceFolder}/${config:bm.svdFileName}",
            "servertype": "jlink",
            "ipAddress": "${input:IPAddressID}",
            "interface": "swd",
            "device": "${config:bm.deviceName}",
            "gdbPath": "arm-none-eabi-gdb",
            "runToMain": true,
            "runToEntryPoint": "main",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "rtos": "FreeRTOS",
            "showDevDebugOutput": "none"
        },
        {
            "name": "Launch (Remote SEGGER JLink with setup on host)",
            "request": "launch",
            "type": "cortex-debug",
            "preLaunchTask": "RemoteDebugSetup",
            "postDebugTask": "RemoteDebugTeardown",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceFolder}/${config:bm.firmwareFileName}",
            "svdFile": "${workspaceFolder}/${config:bm.svdFileName}",
            "servertype": "jlink",
            "ipAddress": "${input:IPAddressID}",
            "interface": "swd",
            "device": "${config:bm.deviceName}",
            "gdbPath": "arm-none-eabi-gdb",
            "runToMain": true,
            "runToEntryPoint": "main",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "rtos": "FreeRTOS",
            "showDevDebugOutput": "none",
        },
        {
            "name": "Launch (SEGGER JLink)",
            "request": "launch",
            "type": "cortex-debug",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceFolder}/${config:bm.firmwareFileName}",
            "svdFile": "${workspaceFolder}/${config:bm.svdFileName}",
            "servertype": "jlink",
            "interface": "swd",
            "device": "${config:bm.deviceName}",
            "gdbPath": "arm-none-eabi-gdb",
            "runToMain": true,
            "runToEntryPoint": "main",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "rtos": "FreeRTOS",
            "showDevDebugOutput": "none"
        },
        {
            "name": "Attach (SEGGER JLink)",
            "request": "attach",
            "type": "cortex-debug",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceFolder}/${config:bm.firmwareFileName}",
            "svdFile": "${workspaceFolder}/${config:bm.svdFileName}",
            "servertype": "jlink",
            "interface": "swd",
            "device": "${config:bm.deviceName}",
            "gdbPath": "arm-none-eabi-gdb",
            "runToMain": true,
            "runToEntryPoint": "main",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "rtos": "FreeRTOS",
            "showDevDebugOutput": "none"
        },
        {
            "name": "Launch FW (BlackMagic Probe)",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/${config:bm.firmwareFileName}",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "external",
            "gdbTarget": "${input:BLACKMAGIC}",
            "svdFile": "${workspaceFolder}/${config:bm.svdFileName}",
            "rtos": "FreeRTOS",
            "runToEntryPoint": "main",
            "overrideLaunchCommands": [
                "monitor swdp_scan",
                "attach 1",
                "set confirm off",
                "set mem inaccessible-by-default off",
                "load"
            ]
        },
        {
            "name": "Attach FW (BlackMagic Probe)",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/${config:bm.firmwareFileName}",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "external",
            "gdbTarget": "${input:BLACKMAGIC}",
            "svdFile": "${workspaceFolder}/${config:bm.svdFileName}",
            "rtos": "FreeRTOS",
            "postAttachCommands": [
                "monitor swdp_scan",
                "attach 1",
                "set confirm off",
                "set mem inaccessible-by-default off",
            ]
        }
    ]
}