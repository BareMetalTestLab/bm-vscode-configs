    "version": "0.2.0",
    "configurations": [     
        {
            "name": "Launch Remote jlink",
            "request": "launch",
            "type": "cortex-debug",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceFolder}/build/${config:bm.firmwareFileName}",
            "svdFile": "${workspaceFolder}/${config:bm.svdFileName}",
            "servertype": "jlink",
            "ipAddress": "${input:IPAddressID}",
            "interface": "swd",
            "device": "${config:bm.deviceName}",
            "gdbPath": "arm-none-eabi-gdb",
            "runToMain": true,
            "runToEntryPoint": "main",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "rtos": "FreeRTOS",
            "showDevDebugOutput": "none"
        },
        {
