{
	"tasks": [
		{
			"label": "RemoteDebugSetup",
			"type": "shell",
			"command": "remote_debug_host_name=${config:bm.remoteHostName} remote_debug_host=${input:IPAddressID} remote_debug_password=${input:RemoteDebugPassword} bash .vscode/remote_debug_start.sh",
			"isBackground": true,
			"problemMatcher": {
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "Starting remote debug",
					"endsPattern": "Waiting for client connections..."
				}
			},
			"group": "build",
			"options": {
				"env": {
					"bm_deviceName": "${config:bm.deviceName}",
					"bm_jlinkSerial": "${config:bm.jlinkSerial}"
				}
			}
		},
		{
			"label": "RemoteDebugTeardown",
			"type": "shell",
			"command": "echo ${input:terminate}",
		},
		{
			"label": "BlackMagic RTT Terminal",
			"type": "shell",
			"command": "echo 'Starting RTT...'; TARGET='${input:BlackMagicRTT}'; if [[ $TARGET == *:* ]]; then nc ${TARGET%%:*} ${TARGET##*:}; else screen $TARGET 115200; fi",
			"isBackground": true,
			"problemMatcher": [
				{
					"owner": "blackmagic-rtt",
					"pattern": [
						{
							"regexp": "^$",
							"file": 1,
							"line": 1,
							"message": 1
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "Starting RTT",
						"endsPattern": "Starting RTT"
					}
				}
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false
			}
		},
	],
	"inputs": [
		{
			"id": "terminate",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "terminateAll"
		},
		{
			"type": "promptString",
			"id": "IPAddressID",
			"description": "IP of the J-Link GDB Server",
			"default": "192.168.1.100",
		},
		{
			"type": "promptString",
			"password": true,
			"id": "RemoteDebugPassword",
			"description": "Password for remote debug user"
		},
		{
			"type": "promptString",
			"id": "BlackMagicRTT",
			"description": "BlackMagic RTT: tty device or ip:port",
			"default": "192.168.1.100:2332"
		}
	],
	"version": "2.0.0"
}